{
	"globalFramework": [
		{
			"id": "backend-java-spring-21",
			"stack": "backend",
			"platform": "java",
			"platformVersion": "21",
			"framework": "spring",
			"docker": {
				"argImageBuild": "eclipse-temurin:21-jdk-jammy",
				"argImageRuntime": "eclipse-temurin:21-jre-jammy",
				"argExposePort": 8080,
				"argCmdExtraBuilderPreCopy": "echo 'Framework: Preparando ambiente...'",
				"argCmdExtraBuilderPosCompile": "echo 'Framework: Compilação concluída.'",
				"argCmdExtraRuntimePreCopy": "echo 'Framework: Preparando runtime...'",
				"argCmdExtraRuntimePreCmd": "echo 'Framework: Finalizando imagem...'"
			},
			"compliance": {
				"sonarqubeThreshold": "80",
				"vulnerabilitySeverityLimit": "high",
				"maxCpu": "500m",
				"maxMemory": "1Gi",
				"licensePolicy": {
					"allowList": [
						"Apache-2.0",
						"MIT",
						"BSD-3-Clause",
						"EPL-2.0"
					],
					"denyList": [
						"GPL-3.0",
						"AGPL-3.0",
						"LGPL-3.0"
					],
					"actionOnUnknown": "warn"
				}
			}
		}
	]
}